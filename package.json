{
  "name": "file-zen",
  "displayName": "File Zen",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fileZen.commands.add",
        "title": "%fileZen.commands.add.title%"
      },
      {
        "command": "fileZen.commands.remove",
        "title": "%fileZen.commands.remove.title%",
        "icon": "$(trash)"
      },
      {
        "command": "fileZen.commands.editLabel",
        "title": "%fileZen.commands.editLabel.title%",
        "icon": "$(pencil)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fileZen.commands.remove",
          "when": "false"
        },
        {
          "command": "fileZen.commands.editLabel",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "fileZen.commands.editLabel",
          "when": "view == fileZen.views.fileList",
          "group": "context@1"
        },
        {
          "command": "fileZen.commands.editLabel",
          "when": "view == fileZen.views.fileList",
          "group": "inline@1"
        },
        {
          "command": "fileZen.commands.remove",
          "when": "view == fileZen.views.fileList",
          "group": "context@2"
        },
        {
          "command": "fileZen.commands.remove",
          "when": "view == fileZen.views.fileList",
          "group": "inline@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileZenContainer",
          "title": "%fileZen.container.title%",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "fileZenContainer": [
        {
          "id": "fileZen.views.fileList",
          "name": "%fileZen.views.fileList.name%"
        }
      ]
    }
  },
  "scripts": {
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "format": " prettier . --write",
    "lint": "eslint src --ext ts",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run package",
    "watch": "webpack --watch",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "3.0.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
